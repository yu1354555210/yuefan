.top-img {
    width: 100%;
    height: 416rpx;
    position: relative;
    overflow: hidden;
}

.top-img image {
    height: 100%;
}

.top-img text {
    position: absolute;
    left: 0;
    bottom: 0;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    font-size: 28rpx;
    color: #fff;
    width: 100%;
    display: block;
    background-color: rgba(0, 0, 0, 0.5);
}

.recommend-title {
    height: 38rpx;
    line-height: 38rpx;
    padding: 18rpx 0 30rpx;
    border-bottom: 2rpx solid #f0f0f0;
    overflow: hidden;
}

.recommend-title span {
    display: inline-block;
    text-align: center;
    color: #fff;
    padding: 0 15rpx;
    background-color: #df4948;
    font-size: 22rpx;
    border-radius: 0 19rpx 19rpx 0;
}

.recommend-title text {
    font-size: 20rpx;
    color: #b0b0b0;
    margin-left: 20rpx;
}

.news-list {
    padding: 0 38rpx;
    overflow: hidden;
}

.news-item {
    padding: 38rpx 0;
    border-bottom: 2rpx solid #ebebeb;
}

.news-list .news-title {
    font-size: 30rpx;
    color: #313036;
    font-weight: bold;
}

.news-list .news-summary {
    font-size: 24rpx;
    line-height: 40rpx;
    color: #787878;
    padding: 20rpx 0;
}

.news-list .news-img {
    display: flex;
    justify-content: space-between;
}

.news-list .news-img image {
    width: 330rpx;
    height: 200rpx;
    object-fit: cover;
}

.tips {
    text-align: center;
    font-size: 24rpx;
    padding: 30rpx 0;
    color: #aaa;
}

.wrapper {
    /* width: 140px; */
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 33;
    text-align: center;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
	font-size: 24rpx;
	color: #df4948;
}

.cssload-loader {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    display: inline-block;
    position: relative;
	overflow: visible;
	margin-bottom: 20rpx;
}

.cssload-loader, .cssload-loader::before, .cssload-loader::after {
    animation: 0.9s infinite ease-in-out;
    -webkit-animation: 0.9s infinite ease-in-out;
}

.cssload-loader::before, .cssload-loader::after {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
}

.cssload-loader::before, .cssload-loader::after {
    content: "";
}

.cssload-loader::before {
    border: 1px solid #f00;
    top: -1px;
    left: -1px;
    opacity: 0;
    animation-name: cssload-pulse;
    -webkit-animation-name: cssload-pulse;
}

.cssload-loader::after {
    background-color: rgb(255, 0, 0);
    animation-name: cssload-pulse-2;
    -webkit-animation-name: cssload-pulse-2;
}

@keyframes cssload-pulse {
    0% {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.3);
        opacity: 0;
    }

    100% {
        transform: scale(1.3);
        opacity: 0;
    }
}

@-webkit-keyframes cssload-pulse {
    0% {
        -webkit-transform: scale(1);
        opacity: 1;
    }

    50% {
        -webkit-transform: scale(1.3);
        opacity: 0;
    }

    100% {
        -webkit-transform: scale(1.3);
        opacity: 0;
    }
}

@keyframes cssload-pulse-2 {
    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(0.7);
    }

    100% {
        transform: scale(1);
    }
}

@-webkit-keyframes cssload-pulse-2 {
    0% {
        -webkit-transform: scale(1);
    }

    50% {
        -webkit-transform: scale(0.7);
    }

    100% {
        -webkit-transform: scale(1);
    }
}
